<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            prefWidth="300.0" 
            prefHeight="290.0"
            fx:controller="se.lu.ics.controllers.ProjectAddDialogController">
    <children>
        <Label fx:id="labelProjectId" 
                text="ID" 
                layoutX="20" 
                layoutY="20" />
        <TextField fx:id="textFieldProjectId" 
                layoutX="120" 
                layoutY="20" 
                prefWidth="150.0"/>

        <Label fx:id="labelProjectName" 
                text="Name" 
                layoutX="20" 
                layoutY="60" />
        <TextField fx:id="textFieldProjectName" 
                layoutX="120" 
                layoutY="60" 
                prefWidth="150.0"/>

        <Label fx:id="labelProjectStartDate" 
                text="Start date" 
                layoutX="20" 
                layoutY="100" />
        <DatePicker fx:id="datePickerProjectStartDate" 
                layoutX="120" 
                layoutY="100" 
                prefWidth="150.0"/>

        <Label fx:id="labelProjectEndDate" 
                text="End date" 
                layoutX="20" 
                layoutY="140" />               
         <DatePicker fx:id="datePickerProjectEndDate" 
                layoutX="120" 
                layoutY="140" 
                prefWidth="150.0"/>

        <Label fx:id="labelProjectBudget" 
                text="Budget" 
                layoutX="20" 
                layoutY="180" />
         <TextField fx:id="textFieldProjectBudget" 
                layoutX="120" 
                layoutY="180" 
                prefWidth="150.0"/>

        <Button fx:id="buttonProjectSave" 
                text="Save" 
                layoutX="80" 
                layoutY="230" 
                onAction="#handleButtonProjectSaveAction"/>
        <Button fx:id="buttonBack" 
                text="Back" 
                layoutX="20" 
                layoutY="230" 
                onAction="#handleButtonBackAction"/>
        <Label fx:id="labelResponse" 
               layoutX="20" 
               layoutY="260" 
               prefHeight="25.0" 
               prefWidth="250.0" 
               text="Response"
               visible="false" />
    </children>
</AnchorPane>